##############################################################################

CC=gcc
CFLAGS= -w -fPIC -m32
SO_Name       = libchealpix.dylib
LIBFLAGS      = -Wl,-single_module,-soname,$(SO_Name) -dynamiclib  -lc -lm -mmacosx-version-min=10.10

OBJS =	chealpix.o

all: $(SO_Name)

$(SO_Name): $(OBJS)
	$(CC) $(CFLAGS) $(LIBFLAGS) -o $@ $(OBJS)

chealpix.o:	chealpix.h chealpix.c

clean:
	rm -f *.a *.o $(SO_Name)

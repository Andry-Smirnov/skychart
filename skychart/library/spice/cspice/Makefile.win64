CC = x86_64-w64-mingw32-gcc
AR = x86_64-w64-mingw32-ar
RANLIB = x86_64-w64-mingw32-ranlib

CFLAGS  = -c -ansi -O2 -fPIC -DNON_UNIX_STDIO -DMSDOS $(arch_flags)

LIBNAME = libcspice.a

.PHONY: clean

# Source files
SRC=$(wildcard *.c)

OBJ=$(SRC:.c=.o)

all: $(OBJ)
	$(AR) cr $(LIBNAME) *.o
	$(RANLIB) $(LIBNAME)

clean:
	rm -f $(OBJ) $(LIBNAME)
